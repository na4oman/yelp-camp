<% layout('./layouts/boilerplate') -%>
    <div id="cluster-map">

    </div>
    <h1 class='mb-3 text-center'>All Campgrounds</h1>
    <% for (let campground of campgrounds) { %>
    <div class="card mb-3" style="width: auto">
      <div class="row g-0">
        <div class="col-md-4">
          <% if(campground.images.length) { %>
          <img src="<%= campground.images[0].url %>" alt="..." class="img-fluid">
          <% } else { %>
            <img src="https://res.cloudinary.com/dp1wjkhmr/image/upload/v1618927050/YelpCamp/hk1u6omjf8g9wm82n4zg.jpg" class="card-img-top" alt="">
            <% } %> 
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= campground.title %></h5>
            <p class="card-text"><small class="text-muted"><%= campground.location %></small></p>
            <p class="card-text"><%= campground.description %></p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
          </div>
        </div>
      </div>
    </div>
    <% } %>

